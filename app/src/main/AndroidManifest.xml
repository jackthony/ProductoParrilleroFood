<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.productoparrillerofood">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductoParrilleroFood"

        android:usesCleartextTraffic="false"
        tools:ignore="GoogleAppIndexingWarning"
        >
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.RecomendadoActivity" />
        <activity android:name=".view.ui.activity.PlatoDetalleActivity" />
        <activity android:name=".view.ui.activity.PlatoActivity" />
        <activity android:name=".MainActivity"/>


    </application>

</manifest>